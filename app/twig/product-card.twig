{% extends "layouts/app.twig" %}

{% block pageTitle %}Карточка товара{% endblock %}

{% block content %}
    {% include "layouts/breadcrumbs.twig" %}
    <div class="page-body">
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        {% include "layouts/sidebar.twig" %}
                    </div>
                    <div class="col-md-9">
                        <div class="page-body__content">
                            <div class="page-body__content-inner m-mh-full">
                                <div class="product-card">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class="product-card__photo">
                                                <div class="product-card__photo-big"></div>
                                                <div class="owl-carousel product-card__photos-small">
                                                    <div class="product-card__photo-small">
                                                        <img class="product-card__img-big" src="images/3g-smart-baby-watch-q75-android.jpg">
                                                    </div>
                                                    <div class="product-card__photo-small">
                                                        <img class="product-card__img-big" src="images/3g-smart-baby-watch-q75-android.jpg">
                                                    </div>
                                                    <div class="product-card__photo-small">
                                                        <img class="product-card__img-big" src="images/3g-smart-baby-watch-q75-android.jpg">
                                                    </div>
                                                    <div class="product-card__photo-small">
                                                        <img class="product-card__img-big" src="images/3g-smart-baby-watch-q75-android.jpg">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-7">
                                            <h3 class="h3">
                                                3G детские умные часы Q75 на Android 4.2 1.2 ГГц Smart Baby Watch с GPS трекером 3G WCDMA WIFI КАМЕРА
                                            </h3>
                                            <div class="product-card__product-info"></div>
                                            <form method="post">
                                                <div class="mb-30">
                                                    <span>Количество</span>
                                                    <span><input type="text" class="input-text input-text-default input-text-sm mr-10" title="Количество">шт.</span>
                                                </div>
                                                <div class="mb-15">
                                                    <button type="button" class="btn btn-default btn-lg">Добавить в корзину</button>
                                                </div>
                                                <label class="checkbox-fav">
                                                    <input type="checkbox" class="checkbox-fav__input" title="Мои желания">
                                                    <i class="checkbox-fav-icon gray"></i>
                                                    <i class="checkbox-fav-icon orange"></i>
                                                    Добавить в "Мои желания"
                                                </label>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="products">
                                    <div class="products__item">
                                        <div class="bg-light-gray">
                                            <p>Сопутствующие товары</p>
                                        </div>
                                    </div>
                                    <div class="products__item">
                                        <div class="bg-blue">
                                            <p>Просмотренные товары</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}