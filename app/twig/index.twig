{% extends "layouts/app.twig" %}

{% block pageTitle %}Главная страница{% endblock %}

{% block content %}
    <div class="page-body">
        <section class="banners-top">
            <div class="container">
                <div class="row banners-top__row">
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <a class="banners-top__left">
                            <img class="banners-top__img" src="http://placehold.it/776x351">
                        </a>
                    </div>
                    <div class="col-md-4 col-sm-4 hidden-xs">
                        <a class="banners-top__right">
                            <img class="banners-top__img" src="http://placehold.it/383x350">
                        </a>
                    </div>
                </div>
            </div>
        </section>
        <section class="sorting text-right">
            <div class="container">
                <ul class="sorting__list">
                    <li class="sorting__item">
                        <a class="sorting__link" href="#"><span class="va-m td-u">Новинки</span> <i class="icon icon-arrow-down"></i></a>
                    </li>
                    <li class="sorting__item">
                        <a class="sorting__link" href="#"><span class="va-m td-u">Популярное</span> <i class="icon icon-arrow-down"></i></a>
                    </li>
                    <li class="sorting__item">
                        <a class="sorting__link" href="#"><span class="va-m td-u">Лидеры продаж</span> <i class="icon icon-arrow-down"></i></a>
                    </li>
                </ul>
            </div>
        </section>
        <section class="page-body__main">
            <div class="container">
                <div class="page-body__sidebar">
                    {% include "layouts/sidebar.twig" %}
                </div>
                <div class="page-body__content">
                    {% include "layouts/catalog.twig" %}
                </div>
            </div>
        </section>
    </div>
{% endblock %}